<?xml version='1.0' encoding='utf-8'?>
<widget id="com.nucleo.autotips" version="1.2.5" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Autotips 2015</name>
    <description>
       Autotips  2015
    </description>
    <author email="dev@n4ymedio.mx" href="n4ymedio.mx">
        Nucleo 4 y Medio
    </author>
    <content src="index.html" />
    <preference name="permissions" value="none" />
    <preference name="orientation" value="portrait" />
    <preference name="fullscreen" value="false" />
    <preference name="webviewbounce" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="disable-cursor" value="false" />
    <preference name="android-minSdkVersion" value="7" />
    <preference name="android-installLocation" value="auto" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarStyle" value="default" />
    <preference name="target-device" value="handset" />
    <preference name="BackgroundColor" value="0x000000"/>
   
    <gap:plugin name="cordova-plugin-geolocation@1.0.0" source="npm" />
    <gap:plugin name="org.apache.cordova.device" source="npm" />
    <gap:plugin name="org.apache.cordova.device-motion" source="npm" />
    <gap:plugin name="org.apache.cordova.file" source="npm" />
    <gap:plugin name="cordova-plugin-whitelist" source="npm" />
    <gap:plugin name="org.apache.cordova.network-information" source="npm" />
    <gap:plugin name="com.borismus.webintent" source="npm" />
    <gap:plugin name="org.apache.cordova.geolocation" source="npm" />

    <gap:plugin name="org.apache.cordova.splashscreen" source="npm"  />

    <preference name="SplashScreen" value="splash.png"/>
    <preference name="SplashScreenDelay" value="7000" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashScreenBackgroundColor" value="black" /> 


    <feature name="Geolocation">
        <param name="android-package" value="org.apache.cordova.geolocation.GeoBroker" />
    </feature>
    <feature name="Geolocation">
        <param name="ios-package" value="CDVLocation" />
    </feature>

    <preference name="HideKeyboardFormAccessoryBar" value="true" />

    <gap:splash gap:platform="android" gap:qualifier="port-ldpi" src="res/android/drawable-ldpi/512.9.png" />
    <gap:splash gap:platform="android" gap:qualifier="port-mdpi" src="res/android/drawable-mdpi/512.9.png" />
    <gap:splash gap:platform="android" gap:qualifier="port-hdpi" src="res/android/drawable-hdpi/512.9.png" />
    <gap:splash gap:platform="android" gap:qualifier="port-xhdpi" src="res/android/drawable-xhdpi/512.9.png" />
    <feature name="http://api.phonegap.com/1.0/geolocation" />
    <feature name="http://api.phonegap.com/1.0/device" />
    <feature name="http://api.phonegap.com/1.0/geolocation" />
    <feature name="http://api.phonegap.com/1.0/notification" />
    <gap:splash src="splash.png" />

    <icon src="icon.png"/>
    <access origin="*" />
    <preference name="EnableViewportScale" value="false" />
    <access origin="geo:*" launch-external="yes"/>
    <access origin="google.navigation:*" launch-external="yes"/>
    <access origin="*://*.googleapis.com/*" subdomains="true" />
    <access origin="*://*.gstatic.com/*" subdomains="true" />
    <access origin="*://*.google.com/*" subdomains="true" />
    <access origin="*://*.googleusercontent.com/*" subdomains="true" />

    <allow-intent href="geo:*" />

    <allow-navigation href="http://autotips.mx/*" />
    <allow-navigation href="http://*/*" />
    <allow-navigation href="https://*/*" />
    <allow-navigation href="data:*" />

</widget>
